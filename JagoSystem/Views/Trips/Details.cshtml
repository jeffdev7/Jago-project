@model JagoSystem.Models.Trip

@{
    ViewData["Title"] = "Details";
}



<div>
    <br />
    <h4>Dados da viagem</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Origem)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Origem)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Destino)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Destino)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Departure)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Departure)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Arrival)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Arrival)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Passageiro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Passageiro.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-light">Edit</a> |
    <a asp-action="Index" class="btn btn-primary">Voltar</a>
</div>
